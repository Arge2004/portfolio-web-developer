---
import FadeInSection from "../react_components/FadeInSection.tsx";
import linkedin from "../../assets/linkedin.svg?url";
import github from "../../assets/github.svg?url";
---

<FadeInSection client:visible id="contact-section">
  <div class="section-container">
    <div class="contact-section">
      <h2>Get in touch</h2>
      <p>
        Whatâ€™s next? Feel free to reach out to me if you're looking for a
        developer, have a query, or simply want to connect.
      </p>
      <div>
        <slot />
      </div>
      <p>You may also find me on these platforms!</p>
      <div>
        <a
          href="https://www.linkedin.com/in/argenis-medina-41546037a"
          target="_blank"
          rel="noopener noreferrer"
        >
          <img src={linkedin} alt="LinkedIn" />
        </a>
        <a
          href="https://github.com/Arge2004"
          target="_blank"
          rel="noopener noreferrer"
        >
          <img src={github} alt="GitHub" />
        </a>
      </div>
    </div>
  </div>
</FadeInSection>

<style lang="sass">
  @use '../../styles/_variables.sass'
  .contact-section
    display: flex
    flex-direction: column
    align-items: center
    justify-content: justify-around
    padding: 56px
    border-radius: 20px
    padding-block: 25px
    gap: 48px
    color: variables.$bg-secondary
    font-size: 20px
    @media screen and (max-width: 768px) 
      height: 100vh
      padding: 80px 16px 16px


    h2
      font-weight: bold
      background-color: variables.$bg-secondary
      color: variables.$font-primary-color
      padding: 20px 20px
      border-radius: 10px
      font-size: variables.$h2-size
    p
      font-size: variables.$p-size
    p:first-of-type
      text-align: center
      max-width: 600px
    div:first-of-type
      margin-block: 20px
    div:last-of-type
      display: flex
      gap: 24px
      img
        color: variables.$bg-secondary
        width: 48px
        transition: transform 0.5s ease
        &:hover
          transform: scale(1.3)
          transition: transform 0.5s ease
          cursor: pointer
</style>
