---
import FadeInSection from "../react_components/FadeInSection.tsx";
import "../../styles/Section.sass";
---

<FadeInSection client:visible id="intro-section">
  <div class="section-container">
    <div class="intro-section">
      <div class="intro-section__info">
        <h1>Hello, I'm Argenis ðŸ‘‹</h1>
        <p>
          I'm a full stack junior developer (React.js & Java Spring Boot) with a
          focus on creating exceptional digital experiences that are fast,
          visually appealing, and responsive. I've been practicing on personal
          projects, and I would love to continue growing my skills and take on
          new challenges.
        </p>
        <div class="info__location">
          <img src="/location.svg" alt="logo location" />
          <p>Antioquia, Colombia</p>
        </div>
        <div class="info__availability">
          <span></span>
          <p>Available for new projects</p>
        </div>
        <div class="info__social-links">
          <a
            href="http://linkedin.com/in/your-profile"
            target="_blank"
            rel="noopener noreferrer"
          >
            <img src="/linkedin.svg" alt="LinkedIn" />
          </a>
          <a
            href="http://github.com/your-profile"
            target="_blank"
            rel="noopener noreferrer"
          >
            <img src="/github.svg" alt="GitHub" />
          </a>
        </div>
      </div>
      <div class="intro-section__image">
        <img src="/profile_picture.jpg" alt="Profile" />
      </div>
    </div>
  </div>
</FadeInSection>

<style lang="sass">
  @use '../../styles/_variables.sass'
  .intro-section
    display: flex
    flex-direction: row
    align-items: center
    justify-content: center
    gap: 48px
    padding: 0 48px
  .intro-section__info
    display: flex
    flex-direction: column
    max-width: 60%
    gap: 24px
    .info__location
      display: flex
      align-items: center
      vertical-align: middle
      gap: 12px
    .info__social-links
      display: flex
      gap: 24px
      img
        width: 36px
        height: 36px
        transition: transform 0.8s ease
        &:hover
          transform: scale(1.3)
          transition: transform 0.8s ease
          cursor: pointer
    .info__availability
      display: flex
      align-items: center
      gap: 12px
      margin-bottom: 24px
      span
        background-color: #10B981
        padding: 5px 10px
        border-radius: 10px

    h1
      font-size: 64px
      font-weight: 700
      margin: 0
      >p
        margin-bottom: 24px
  .intro-section__image
    display: flex
    align-items: center
    width: clamp(300px, 30vw, 600px)
    position: relative
    img
      width: 100%
      height: auto
      object-fit: cover
      z-index: 1
      border-radius: 20px
    &::before
      content: ''
      position: absolute
      width:100%
      height: 100%
      left:5%
      top: 5%
      border-radius: 20px
      background-color: rgba(16, 128, 149, 0.3)
      z-index: 0
</style>
