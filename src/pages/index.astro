---
import Layout from "../components/layouts/Layout.astro";
import ContactSection from "../components/sections/ContactSection.astro";
import ContactInfoItem from "../components/ContactInfoItem.astro";
import IntroSection from "../components/sections/IntroSection.astro";
import SkillSection from "../components/sections/SkillSection.astro";
import StudiesSection from "../components/sections/StudiesSection.astro";
import ProjectSection from "../components/react_components/ProjectSection";
import email from "../assets/email.svg?url";
import phone from "../assets/phone.svg?url";


---

<Layout>
  <IntroSection />
  <StudiesSection />
  <SkillSection />
  <ProjectSection client:visible/>
  <ContactSection>
    <ContactInfoItem
      iconUrl={email}
      iconAlt="Email Icon"
      text="argemm.dev08@gmail.com"
    />
    <ContactInfoItem
      iconUrl={phone}
      iconAlt="Phone Icon"
      text="+57 3238044948"
    />
  </ContactSection >
</Layout>


